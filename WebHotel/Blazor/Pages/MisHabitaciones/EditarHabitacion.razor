@page "/Habitaciones/Editar/{Codigo}"



<h3>Editar Habitación</h3>
<br />
<EditForm Model="@hab">
    <DataAnnotationsValidator />
    <div class="from-group row">
        <label for="Codigo" class="col-sm-2 col-form-label">
            Código
        </label>
        <div class="col-sm-10">
            @hab.Codigo
        </div>
    </div>

    <div class="from-group row">
        <label for="Nombre" class="col-sm-2 col-form-label">
            Nombre
        </label>
        <div class="col-sm-10">
            <InputText id="Nombre" class="form-control" @bind-Value="hab.Nombre" />
            <ValidationMessage For="@(() => hab.Nombre)" />
        </div>
    </div>

    <div class="from-group row">
        <label for="Descripcion" class="col-sm-2 col-form-label">
            Descripcion
        </label>
        <div class="col-sm-10">
            <InputText id="Descripcion" class="form-control" @bind-Value="hab.Descripcion" />
            <ValidationMessage For="@(() => hab.Descripcion)" />
        </div>
    </div>

    <div class="from-group row">
        <label for="TipoHabitacion" class="col-sm-2 col-form-label">
            Tipo de habitación
        </label>
        <div class="col-sm-10">
            <InputText id="TipoHabitacion" class="form-control" @bind-Value="hab.TipoHabitacion" />
            <ValidationMessage For="@(() => hab.TipoHabitacion)" />
        </div>
    </div>

    <div class="from-group row">
        <label for="Existencia" class="col-sm-2 col-form-label">
            Existencia
        </label>
        <div class="col-sm-10">
            <InputNumber id="Existencia" class="form-control" @bind-Value="hab.Existencia" />
        </div>
    </div>

    <div class="from-group row">
        <label for="Precio" class="col-sm-2 col-form-label">
            Precio
        </label>
        <div class="col-sm-10">
            <InputNumber id="Precio" class="form-control" @bind-Value="hab.Precio" />
        </div>
    </div>

    <div class="from-group row">
        <label for="Imagen" class="col-sm-2 col-form-label">
            Imagen
        </label>
        <div class="col-sm-10">
            <InputFile OnChange="@SeleccionarImagen"></InputFile>
            @if (hab.Imagen != null)
            {
                string base64 = Convert.ToBase64String(hab.Imagen);
                string imgUrl = String.Format("data.image/gif;base64,{0}", base64);
                <img style="width:300px; height:300px" src="@imgUrl" />
            }
            else
            {
                <img style="width:300px; height:300px" src="@imgUrl" />

            }

        </div>
    </div>

    <div class="from-group row">
        <p>
            <input type="submit" class="btn btn-primary" value="Guardar" @onclick="Guardar" />
            <input type="submit" class="btn btn-danger" value="Cancelar" @onclick="Cancelar" />
            <input type="submit" class="btn btn-danger" value="Eliminar" @onclick="Eliminar" />
        </p>
    </div>
</EditForm>