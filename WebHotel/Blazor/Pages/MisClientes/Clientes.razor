@page "/Clientes"
@using Modelos

<AuthorizeView Roles="Administrador">
    <Authorized Context="AuthenticationState">
        <h2>Lista de Clientes</h2>
        <div class="form-group row">
            <div class="col-sm-10">
                <a href="/Clientes/Nuevo" class="btn btn-primary m-1">Nuevo Cliente</a>
            </div>
        </div>
        @if (lista == null)
        {
            <p>No existen clientes en el sistema</p>
        }
        else
        {
            <table class="table">
                <thead>
                    <tr>
                        <th>Identidad</th>
                        <th>Nombre</th>
                        <th>Direccion</th>
                        <th>Email</th>
                        <th>Telefono</th>
                    </tr>
               
                </thead>
                <tbody>
                    @foreach (Cliente user in lista)
                    {
                        
                        
                        <tr style="background-color:beige;">
                            <td>@user.Identidad</td>
                            <td>@user.Nombre</td>
                            <td>@user.Direccion</td>
                            <td>@user.Email</td>
                            <td>@user.Telefono</td>

                            <td>
                                <a class="btn btn-success" href="@($"/Clientes/Editar/{user.Identidad}")"> Editar</a>
                            </td>

                        </tr>
                    
                    }
                </tbody>
            </table>
        }
    </Authorized>
</AuthorizeView>